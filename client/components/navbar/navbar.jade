.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl', ng-hide="'main' | isState")
  .container-fluid
    .navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only {{ 'navbar.link.toggler' | translate }}
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref="main", ng-click="isCollapsed = true")   
        img(src="assets/images/site-logo-bordered.svg", height="60px", alt="Rentswatch")

    .navbar-collapse(ng-class="{ collapse: isCollapsed }")
      ul.nav.navbar-nav(ng-click="isCollapsed = true")
        li(ui-sref-active-eq="active")
          a(ui-sref='main.quiz') 
            span(ng-bind-html="'navbar.link.quiz' | translate")
        li(ui-sref-active="active")
          a(ui-sref='main.dashboard({city: null})')
            span(ng-bind-html="'navbar.link.dashboard' | translate")
        li
          a(href="http://blog.rentswatch.com", target="_blank")
            span(ng-bind-html="'navbar.link.blog' | translate")
        li
          a(href="http://api.rentswatch.com", target="_blank")
            span(ng-bind-html="'navbar.link.api' | translate")
        li
          a(href="http://twitter.com/rentswatch", target="_blank")
            i.fa.fa-twitter
            span.hidden-md
              | &nbsp;
              span(ng-bind-html="'navbar.link.twitter' | translate")
        li
          a(href="http://facebook.com/rentswatch", target="_blank")
            i.fa.fa-facebook
            span.hidden-md
              | &nbsp;
              span(ng-bind-html="'navbar.link.facebook' | translate")
      ul.nav.navbar-nav.navbar-right
        li(uib-dropdown)        
          a(uib-dropdown-toggle, href="")
            span(ng-bind-html="'navbar.link.currency' | translate")
            span.caret
          ul.dropdown-menu-right(uib-dropdown-menu)
            li(ng-repeat="(c, value) in currencies", 
               ng-class="{ 'active': currency.is(c) }",
               ng-click="currency.use(c)")
              a {{ c | currencySymbol }}
        li(uib-dropdown)
          a(uib-dropdown-toggle, href="")
            span(ng-bind-html="'navbar.link.language' | translate") 
            span.caret
          ul.dropdown-menu-right(uib-dropdown-menu)
            li(ng-class="{ active: main.use() === 'cs' }")
              a(ng-click="main.use('cs')", href="")
                | Čeština
            li(ng-class="{ active: main.use() === 'de' }")
              a(ng-click="main.use('de')", href="")
                | Deutsch
            li(ng-class="{ active: main.use() === 'en' }")
              a(ng-click="main.use('en')", href="")
                | English
            li(ng-class="{ active: main.use() === 'es' }")
              a(ng-click="main.use('es')", href="")
                | Español
            li(ng-class="{ active: main.use() === 'fr' }")
              a(ng-click="main.use('fr')", href="")
                | Français
            li(ng-class="{ active: main.use() === 'it' }")
              a(ng-click="main.use('it')", href="")
                | Italiano
            li(ng-class="{ active: main.use() === 'sv' }")
              a(ng-click="main.use('sv')", href="")
                | Svenska

